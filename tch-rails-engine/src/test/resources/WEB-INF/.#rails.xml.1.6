<?xml version="1.0" encoding="UTF-8"?>

<rails>
    <base-package>com.tchepannou.rails</base-package>
    <login-url>/login</login-url>
    <util-class>com.tchepannou.rails.TestUtil</util-class>
    
    <action-interceptors>
        <interceptor>com.tchepannou.rails.engine.interceptor.ExceptionInterceptor</interceptor>
        <interceptor>com.tchepannou.rails.engine.interceptor.DebugInterceptor</interceptor>
        <interceptor>com.tchepannou.rails.engine.interceptor.ActionRequireUserInterceptor</interceptor>
    </action-interceptors>

    <job-interceptors>
        <interceptor>com.tchepannou.rails.engine.interceptor.ExceptionInterceptor</interceptor>
        <interceptor>com.tchepannou.rails.engine.interceptor.DebugInterceptor</interceptor>
    </job-interceptors>

    <mail-interceptors>
        <interceptor>com.tchepannou.rails.engine.interceptor.ExceptionInterceptor</interceptor>
        <interceptor>com.tchepannou.rails.engine.interceptor.DebugInterceptor</interceptor>
    </mail-interceptors>

    <message-interceptors>
        <interceptor>com.tchepannou.rails.engine.interceptor.ExceptionInterceptor</interceptor>
        <interceptor>com.tchepannou.rails.engine.interceptor.DebugInterceptor</interceptor>
        <interceptor>com.tchepannou.rails.engine.interceptor.MailTemplateInterceptor</interceptor>
    </message-interceptors>

    <services>
        <service type="com.tchepannou.rails.core.api.service.OptionService">
            com.tchepannou.rails.core.impl.PropertiesOptionService
        </service>
        <service type="com.tchepannou.rails.core.api.service.UserService">
            com.tchepannou.rails.core.impl.PropertiesUserService
        </service>
        <service type="com.tchepannou.rails.core.api.service.RenderService">
            com.tchepannou.rails.core.impl.VelocityRenderService
        </service>
    </services>
</rails>